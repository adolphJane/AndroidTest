<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.magicalrice.view" >
    <application
        android:name="debug.CustomViewApplication"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:label="@string/co_custom_view"
        android:allowBackup="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">

        <activity android:name=".testview.TestActivity">
        </activity>

        <activity android:name=".circular_progress_bar.CircularProgressBarActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".horizontal_scroll_tag.TagActivity">
        </activity>
        <activity android:name=".drag_float_view.example.DragFloatViewDisplayActivity">

        </activity>
        <activity android:name=".notification.NotificationActivity"/>

        <activity android:name=".keyboard.example.KeyboardActivity">
        </activity>

        <activity android:name=".recyclerview.typeTwo.RecyclerviewTypeTwoActivity">

        </activity>

        <activity android:name=".recyclerview.item_decoration.ItemDecorationActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name=".notification.NotificationBroadcast"
            android:enabled="true">
            <intent-filter>
                <action android:name="play"/>
                <action android:name="pause"/>
                <action android:name="next"/>
            </intent-filter>
        </receiver>
    </application>
</manifest>
